extends layout

block content

  h1 Author: #{author.name}
  if author.date_of_birth_formatted !="" && author.date_of_death_formatted != ""
    p (#{author.date_of_birth_formatted} - #{author.date_of_death_formatted})
  else if author.date_of_birth_formatted =="" && author.date_of_death_formatted != ""
    p (not available - #{author.date_of_death_formatted}) 
  else if author.date_of_birth_formatted !="" && author.date_of_death_formatted == ""
    p (#{author.date_of_birth_formatted} - alive)
  else if author.date_of_birth_formatted =="" && author.date_of_death_formatted == ""
    p (not available - not available)

  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    
    dl
      each book in author_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This author has no books.
  hr
  p
      a(href=author.url+'/delete') Delete author
  p 
      a(href=author.url + '/update') Update author


